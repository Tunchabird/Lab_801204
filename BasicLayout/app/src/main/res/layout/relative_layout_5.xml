<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/red"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#ff0000"/>

    <View
        android:id="@+id/yellow"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:background="#fff200"
        android:layout_toRightOf="@+id/red"/>

    <View
        android:id="@+id/green"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#90ff00"
        android:layout_below="@+id/yellow"
        android:layout_alignEnd="@id/yellow"/>

    <View
        android:id="@+id/blue"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:background="#0037ff"
        android:layout_below="@+id/green"
        android:layout_alignEnd="@+id/green"/>


</RelativeLayout>
